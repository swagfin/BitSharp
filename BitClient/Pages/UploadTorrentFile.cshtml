@page
@model BitClient.Pages.UploadTorrentFileModel
@{ ViewData["Title"] = "Bit Client | Upload Torrent File"; }


<div class="container">
    @if (!string.IsNullOrWhiteSpace(Model.ModelErrors))
    {<p style="color:red">@Model.ModelErrors</p>}

    <div class="alert-heading">Upload the Torrent and Download with ADM</div>
    <form method="post" enctype="multipart/form-data">
        <input type="file" name="file" required>
        <input type="submit" value="Upload Torrent File">
    </form>
</div>
